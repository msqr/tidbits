<?xml version="1.0"?>
<ehcache>
    
	<diskStore path="java.io.tmpdir"/>
	
	<defaultCache
		maxElementsInMemory="100"
		eternal="false"
		timeToIdleSeconds="120"
		timeToLiveSeconds="120"
		overflowToDisk="false"
		diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120"
	/>

	<cache name="magoffin.matt.xweb.app_settings_cache"
		maxElementsInMemory="1"
		timeToIdleSeconds="600"
		timeToLiveSeconds="1800"
	/>

	<cache name="magoffin.matt.tidbits.SECURITY_USER"
		maxElementsInMemory="10"
		timeToIdleSeconds="600"
		timeToLiveSeconds="1800"
		eternal="false"
		overflowToDisk="false"
		diskPersistent="false"
	/>

	<!-- Cache for ShadowServer shadow PNG images -->
	<cache name="magoffin.matt.tidbits.web.ShadowServer.CACHE"
		maxElementsInMemory="50"
		timeToIdleSeconds="3600"
		timeToLiveSeconds="7200"
		overflowToDisk="true"
		diskPersistent="true"
		diskExpiryThreadIntervalSeconds="120"
	/>
	
	<cache name="magoffin.matt.tidbits.domain.Tidbit"
		maxElementsInMemory="5000"
		timeToIdleSeconds="600"
		timeToLiveSeconds="1800"
		eternal="false"
		overflowToDisk="false"
		diskPersistent="false"
	/>

	<cache name="magoffin.matt.tidbits.domain.TidbitKind"
		maxElementsInMemory="50"
		timeToIdleSeconds="1800"
		timeToLiveSeconds="3600"
		eternal="false"
		overflowToDisk="false"
		diskPersistent="false"
	/>
	
</ehcache>
